  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "./docroot"
      }
    },
    "installer-types": [
      "bower-asset",
      "npm-asset"
    ],
    "installer-paths": {
      "docroot/core": [
        "type:drupal-core"
      ],
      "docroot/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "docroot/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "docroot/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "docroot/profiles/custom/{$name}": [
        "type:drupal-custom-profile"
      ],
      "docroot/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "docroot/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ],
      "docroot/drush/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "docroot/libraries/{$name}": [
        "type:bower-asset",
        "type:npm-asset",
        "type:drupal-library"
      ]
    },
    "enable-patching": true,
    "patches": {
      "drupal/core": {
        "2061377 - Allow image style to be selected in Text Editor's image dialog https://drupal.org/i/2061377" : "https://www.drupal.org/files/issues/2021-10-15/2061377-403.patch",
        "UCSF FilterAlign - remove aggressive removal of classes" : "./patches/core-filteralign.patch",
        "2973706 - Styles dropdown configuration permit multiple tags" : "https://www.drupal.org/files/issues/2022-01-14/allow-multiple-elements-2973706-21.patch",
        "UCSF FilterCaption - Fix decode entities on FilterCaption" : "./patches/core-filtercaption.patch",
        "3200283 - Acquia Connector - add missing SVG images" : "https://www.drupal.org/files/issues/2021-03-24/check-svg-and-error-svg-not-found-3200283-5.patch",
        "3192234 - Responsive Image - Get width and height from fallback responsive image style" : "https://www.drupal.org/files/issues/2021-11-18/3192234-116.patch",
        "2511878 - Support enclosure field in Views RssFields row plugin" : "https://www.drupal.org/files/issues/2020-07-24/views-rss-fields-enclosure-2511878-30.patch",
        "2918784 - Views RSS row plugin incorrectly assumes links are relative. Using custom patch due to conflict with 2511878": "./patches/views-rss-fields-enclosure-2511878-custom.patch",
        "2949017 - There is no way to delete or update file entities of other users" : "https://www.drupal.org/files/issues/2021-12-01/2949017-85.patch"
      },
      "drupal/field_group": {
        "2652642 - Allow to position the group in the advanced sidebar column": "https://www.drupal.org/files/issues/2018-07-26/2652642-57.patch"
      },
      "drupal/entity_embed": {
        "UCSF Entity Embed Caption Fix - Allows the HTML tags to come through from the WYSIWYG": "./patches/entity_embed_caption_fix.patch",
        "2838729 - Allow interaction of CKEditor Dialog on top of Drupal Dialog": "./patches/entity_embed_allowinteraction.patch"
      },
      "drupal/applenews": {
        "3029632 - Add preview link when no channels are configured": "https://www.drupal.org/files/issues/2019-02-05/applenews-preview-with-no-api-3029632-4.patch",
        "11333241 - Limit tags in html": "https://www.drupal.org/files/issues/2019-02-05/applenews-limit_tags_in_html-11333241-2.patch"
      },
      "drupal/entity_embed_link": {
        "Prevent Entity Embed Link from overriding entity_embed_container.html.yml file in the theme" : "./patches/entity_embed_link.patch"
      },
      "drupal/twitter_tweets": {
        "Allow full_text and links to display in tweet body" : "./patches/twitter_tweets-3129736_full_text.patch"
      },
      "drupal/youtube_gallery": {
        "don't ask to download libraries in drush_hook_post_pm_enable()": "https://www.drupal.org/files/issues/2019-03-24/youtube_gallery-no_post_enable-3042898-2.patch",
        "Fix deprecated code" : "./patches/youtube_gallery_fix_deprecated_code.patch"
      },
      "drupal/metatag" : {
        "Fallback options for various metatag fields, only display the first valid option" : "./patches/metatag_fallback.patch"
      },
      "drupal/video_embed_field" : {
        "UCSF Video Embed Patch - Allow background param" : "./patches/video_embed_field__allow_background_param.patch"
      },
      "drupal/sitemap" : {
        "WSOD with Route 'view.taxonomy_term.feed_1' does not exist https://drupal.org/i/3191218" : "https://git.drupalcode.org/project/sitemap/-/merge_requests/3.diff"
      },
      "drupal/views_rss" : {
        "Call to undefined method Drupal-taxonomy-Entity-Term::url() https://www.drupal.org/project/views_rss/issues/3241646" : "https://www.drupal.org/files/issues/2021-10-08/undefined_method-3241646-3.patch"
      }
    },
    "patchLevel": {
       "drupal/core": "-p2"
    }
  },
  "scripts": {
    "remove-git-submodules" : "find . -mindepth 2 -type d -name .git | xargs rm -rf",
    "remove-core-gzip": "find ./docroot/core -name '*.gz' | xargs rm -f",
    "restore-htaccess" : "cp -a patches/htaccess_rewrite_rules.txt docroot/.htaccess",
    "post-install-cmd": [
      "@renamelibraries",
      "@remove-git-submodules",
      "@remove-core-gzip",
      "@restore-htaccess"
    ],
    "post-update-cmd": [
      "@renamelibraries",
      "@remove-git-submodules",
      "@remove-core-gzip",
      "@restore-htaccess"
    ],
    "rmvendor": "rm -rf vendor/*",
    "rmprofiles": "rm -rf docroot/profiles/contrib/*",
    "purge": [
      "@rmvendor",
      "@rmprofiles",
      "@composer clear-cache"
    ],
    "renamelibraries": [
      "rm -rf docroot/libraries/colorbox docroot/libraries/chosen",
      "cp -a docroot/libraries/jquery-colorbox docroot/libraries/colorbox",
      "cp -a docroot/libraries/chosen-js docroot/libraries/chosen"
    ]
  }
}
