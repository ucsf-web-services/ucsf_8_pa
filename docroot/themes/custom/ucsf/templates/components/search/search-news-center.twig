<div class="home-search news-search">
  <h2 class="home-search__title">{{ content.field_search_title }}</h2>
  <form class="home-search__form" action="/news/filter" method="get">
    <input type="text" name="combine" id="edit-combine" class="home-search__form-input" placeholder="{{ node.field_search_placeholder_text.value }}" onclick="this.value='';" tabindex="2">
    <input type="submit" id="edit-submit-news-filter" name="op" value="Search" class="home-search__form-submit">
  </form>
  {% if content.field_search_news_supporting %}
    {{ content.field_search_news_supporting }}
  {% elseif content.field_search_supporting_links %}
    {{ content.field_search_supporting_links }}
  {% endif %}
</div>
