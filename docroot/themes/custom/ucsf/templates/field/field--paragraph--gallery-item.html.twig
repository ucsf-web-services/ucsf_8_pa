{% extends 'field.html.twig' %}

{% block multiple_item_no_label %}
  <div{{ attributes.addClass(classes, 'field__items') }}>
    {% for item in items %}
      <figure>
        <picture{{ item.attributes.addClass('field__item') }}>{{ item.content }}</picture>
      </figure>
    {% endfor %}
  </div>
{% endblock multiple_item_no_label %}

{% block single_item_no_label %}
  <figure>
    <picture{{ attributes.addClass(classes, 'field__item') }}>{{ item.content }}</picture>
  </figure>
{% endblock single_item_no_label %}

{% block item_with_label %}
  <figure>
    <picture{{ item.attributes.addClass('field__item') }}>{{ item.content }}</picture>
  </figure>
{% endblock item_with_label %}
