<div class="recommended-articles has-recommended-article">
  <div class="recommended-articles__banner">
    <h2 class="recommended-articles__title">{{ "Recommended Reading"|t }}</h2>
    <div class="recommended-article__bg"
         style="background: url('{{ file_url(node.field_textured_background_image.entity.field_media_image.entity.uri.value) }}') top left no-repeat transparent;"></div>
    <div class="recommended-article__image">
      {{ content.field_card_image }}s
    </div>
    <header class="recommended-article__copy">
      {% include '@theme/article/byline.twig' %}
      <h2><a href="{{ url }}">{{ label }}</a></h2>
    </header>
  </div>
</div>
