{% set body_classes = not node.isPublished() ? "node--unpublished" %}

<main class="main news-center {{ body_classes }}">
  <a id="main-content" tabindex="-1"></a>
  <h1>{{ label }}</h1>

  <div class="news-center-banner">
    <a href="#latestnews" class="link--cta link--cta-right">View all latest news</a>
    <div class="news-center-banner__featured">
      {{ content.field_feature_article }}
    </div>

    <div class="news-center-banner_list">
      <ul class="card-four-up">
        {{ content.field_support_articles }}
      </ul>
    </div>
  </div>

  {% include '@theme/search/search-news-center.twig' %}

  <div class="media-coverage">
  <div class="media-coverage__mobile-header">
  <h2 class="media-coverage__list-title">{{ "UCSF in the Media"|t }}</h2>
  <p class="media-coverage__mobile-header-more"><a href="/news/media-coverage" class="link link--cta">{{ "View more"|t }}</a></p>
  </div>
    <div class="media-coverage__featured">
      {{ content.field_featured_media_article }}
    </div>

    <div class="media-coverage__list">
      <h2 class="media-coverage__list-title">{{ "UCSF in the Media"|t }}</h2>
        {#{{ content.field_supporting_media_articles }}#}
        {{ drupal_view('media_coverage_articles', 'block_2') }}
      <p class="media-coverage__list-more"><a href="/news/media-coverage" class="link link--cta">{{ "View more"|t }}</a></p>
    </div>
  </div>
  {{ drupal_view('topic_tag_featured_carousel', 'block_2') }}
  <div class="news-list">
    <h2 id="latestnews" class="news-list__title">{{ "The Latest News"|t }}</h2>
    {{ drupal_view('articles_for_news_center', 'block_1') }}
  </div>
  {% include '@theme/misc/video.twig' %}
</main>

{% include '@theme/misc/footer-ctas.twig' %}
