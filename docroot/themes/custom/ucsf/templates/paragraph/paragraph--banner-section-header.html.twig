{% set selectedAlign = content.field_banner_section_position['#items'].getString() %}

<div class="full-bleed-subbanner">
  <div class="full-bleed-subbanner__image {{ selectedAlign }}" style="background: url('{{ file_url(paragraph.field_banner_section_image.entity.field_media_image.entity.uri.value) }}') top left no-repeat transparent;">
    <div class="full-bleed-subbanner__content">
      <h2 class="full-bleed-subbanner__title">{{ content.field_banner_section_title }}</h2>

      <div class="full-banner-subbanner__subtitle">{{ content.field_banner_section_description }}</div>
    </div>
  </div>
</div>
