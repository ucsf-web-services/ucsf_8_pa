{% set classes = [
  'js-tabs',
  'layout-left-30-70',
  paragraph.field_vertical_tab_design.value,
] %}

{{ attach_library('core/jquery.ui.tabs') }}
{{ attach_library('ucsf/vertical_tabs') }}
<div{{ attributes.addClass(classes) }}>

  {# titles #}
  <ul>
    {% for paragraph_vertical_tab in paragraph.field_tabs %}
      <li><a href="#tabs-{{ loop.index }}">{{ paragraph_vertical_tab.entity.field_tab_title.value }}</a></li>
    {% endfor %}
  </ul>

  {# content #}
  {% for paragraph_vertical_tab in paragraph.field_tabs %}
    <div id="tabs-{{ loop.index }}">
      {{ paragraph_vertical_tab.entity.field_tab_content.value|raw }}
    </div>
  {% endfor %}
</div>
