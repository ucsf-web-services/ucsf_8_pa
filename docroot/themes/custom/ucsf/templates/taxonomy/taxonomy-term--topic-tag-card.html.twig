{% set image_url = term.field_taxonomy_card_image.entity.field_media_image.entity.uri.value ? term.field_taxonomy_card_image.entity.field_media_image.entity.uri.value : term.field_issue_cover.entity.field_media_image.entity.uri.value %}
{% set image_style = term.field_taxonomy_card_image.entity.field_media_image.entity.uri.value ? 'topic_card' : 'magazine_issue_cover' %}
{% set alt = term.field_taxonomy_card_image.entity.field_media_image.alt ? term.field_taxonomy_card_image.entity.field_media_image.alt : term.field_issue_cover.entity.field_media_image.alt %}
{% set width = width ?: 260 %}
{% set height = height ?: 350 %}
<li class="topic-card">
  <a href="{{ url }}">
    {% set fid = term.field_taxonomy_card_image.entity.field_media_image.entity.fid.value ?
      term.field_taxonomy_card_image.entity.field_media_image.entity.fid.value :
      term.field_issue_cover.entity.field_media_image.entity.fid.value
    %}
    {% if fid %}
      {{ drupal_image(fid, image_style, attributes={alt: alt, width: width, height: height}, responsive=true)}}
    {% endif %}

    <span>{{ name.0 }}</span>
  </a>
</li>
