{% set layout_modifiers = [] %}

{% set main_base_class = main_base_class|default('main') %}
{% set main_modifiers = [] %}

{% set main_content_base_class = main_content_base_class|default('main-content full-width-page') %}
{% set main_content_modifiers = [] %}

<div class="main-article">
  <div {{ bem('layout-container', (layout_modifiers)) }}>
    {% block page_universal_header %}
      {% include "@organisms/site/universal-header/universal-header.twig" %}
    {% endblock %}

    {% block page_header %}
      {% include "@organisms/site/site-header/site-header.twig" %}
    {% endblock %}

    {% block page_breadcrumbs %}
      {% include "@molecules/menus/breadcrumbs/breadcrumbs.twig" %}
    {% endblock %}

    {% block page_system %}
    {% endblock %}

    <header class="basic-header full-width-page-banner">
        {% include "@atoms/04-images/00-image/figure.twig" with {
          img_src: '../../images/landing/cgr-2-bg.jpg',
          img_alt: 'Journalists talking',
          image_figure_base_class: 'full-width-page-banner-photo',
        } %}

      <div class="full-width-page-banner__header">
        <h1 class="full-width-page__header-title">Community Relations</h1>

        <p>Community Relations informs the community about UCSF campus plans and activities, gathers community feedback about upcoming projects, and relays any concerns or suggestions to our campus decision makers.</p>

        <p>Weâ€™re dedicated to working with and improving the lives of our neighbors, lorem ipsum dolor sit amet, odio vocent ea has. Alii fabellas sapientem ei nec.</p>
      </div>
    </header>

    <div class="full-width-page-wrapper">
      <main role="main" {{ bem(main_base_class, (main_modifiers), main_blockname) }}>
        <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}

        <div {{ bem(main_content_base_class, (main_content_modifiers), main_content_blockname) }}>
            {% block page_content %}{% endblock %}
        </div>

      </main>

      <div class="footer-ctas-wrapper">
        <ul class="footer-ctas">
          <li class="footer-cta">
            <h2>Engage with us. Engage with your neighbors.</h2>

            <div class="footer-cta__copy">
              <a href="" class="icon-heart">Follow us on Facebook</a>
            </div>
          </li>

          <li class="footer-cta">
            <h2>Are you a member of the news media?</h2>

            <div class="footer-cta__copy">
              <a href="" class="icon-heart">Visit the Media Center</a>
            </div>
          </li>
        </ul>
      </div>
    </div>

    {% block page_footer %}
      {% include "@organisms/site/site-footer/site-footer.twig" %}
    {% endblock %}
  </div>
</div>
